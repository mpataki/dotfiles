
SCRIPT_DIR=$0:A:h

# Path to oh-my-zsh
export ZSH=/home/mat/.oh-my-zsh

# theme
#ZSH_THEME="powerlevel10k/powerlevel10k"
eval "$(starship init zsh)"

# Plugins to load (plugins can e found in ~/.oh-my-zsh/plugins/*)
# Custom plugins may be added to ~/.oh-my-zsh/custom/plugins/
plugins=(
  aws
  docker
  mvn
  pass
  colored-man-pages
  jenv
  #pyenv
)

source $ZSH/oh-my-zsh.sh
source $SCRIPT_DIR/p10k.zsh

HISTFILE=~/.histfile
HISTSIZE=1000
SAVEHIST=1000

unsetopt autocd extendedglob nomatch
bindkey -v

zstyle :compinstall filename '/home/mat/.zshrc'

bindkey -v '^?' backward-delete-char # backspace behaviour aligned with vim behaviour

# enable reverse search
bindkey -v
bindkey '^R' history-incremental-search-backward

if [[ `which gh` ]]; then
  eval "$(gh completion -s zsh)"

  function gh-work() {
    rm ~/.config/gh/hosts.yml &> /dev/null || true
    ln -s ~/.config/gh/hosts-jc.yml ~/.config/gh/hosts.yml
    echo "gh is now setup with work credentials"
  }

  function gh-personal() {
    rm ~/.config/gh/hosts.yml &> /dev/null || true
    ln -s ~/.config/gh/hosts-personal.yml ~/.config/gh/hosts.yml
    echo "gh is now setup with personal credentials"
  }
fi

# brew, mac only
if [[ `uname | grep Darwin` ]]; then
  eval "$(/opt/homebrew/bin/brew shellenv)"
fi

# rbenv
if [ -d $HOME/.rbenv ]; then
  eval "$(rbenv init -)"
fi


# pyenv
if [[ `which pyenv` ]]; then
  export PYENV_ROOT="$HOME/.pyenv"
  export PATH="$PYENV_ROOT/bin:$PATH"
  eval "$(pyenv init --path)"
  eval "$(pyenv init -)"
fi

if [[ `which pyenv-virtualenv` ]]; then
  eval "$(pyenv virtualenv-init -)"
fi

# kubectl
if [ $commands[kubectl] ]; then
  source <(kubectl completion zsh)
fi

# ssh-agent
eval $(ssh-agent) > /dev/null # thanks, I hate it.
ssh-add ~/.ssh/jcto-platform.pem &> /dev/null
ssh-add ~/.ssh/uken-platform.pem &> /dev/null

function k8s-k3s-config() {
    echo 'using LOCAL k3s config'
    export KUBECONFIG=~/.kube/config_k3s
}

function k8s-syncdna-config() {
    echo 'using SYNC-DNA k8s config'
    export KUBECONFIG=~/.kube/config-syncdna
}

function k8s-mindjolt-config() {
    echo 'using MINDJOLT k8s config'
    export KUBECONFIG=~/.kube/config-mindjolt
}

function k8s-mindjolt-sandbox-config() {
    echo 'using MINDJOLT SANDBOX k8s config'
    export KUBECONFIG=~/.kube/config-mindjolt-sandbox
}

k8s-k3s-config

. $SCRIPT_DIR/../shell/aliases
. $SCRIPT_DIR/../shell/environment

