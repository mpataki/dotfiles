# Path to oh-my-zsh
export ZSH=/home/mat/.oh-my-zsh

# theme
# ZSH_THEME="robbyrussell"
ZSH_THEME="geometry/geometry"
GEOMETRY_PROMPT_PLUGINS=(exec_time git)
PROMPT_GEOMETRY_GIT_CONFLICTS=true
GEOMETRY_COLOR_GIT_BRANCH=cyan
GEOMETRY_SYMBOL_PROMPT="▶ "
GEOMETRY_SYMBOL_EXIT_VALUE="▷ "

# Plugins to load (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Custom plugins may be added to ~/.oh-my-zsh/custom/plugins/
plugins=(aws docker mvn pass colored-man-pages)

source $ZSH/oh-my-zsh.sh

HISTFILE=~/.histfile
HISTSIZE=1000
SAVEHIST=1000

unsetopt autocd extendedglob nomatch
bindkey -v

zstyle :compinstall filename '/home/mat/.zshrc'

bindkey -v '^?' backward-delete-char # backspace behaviour aligned with vim behaviour

# enable reverse search
bindkey -v
bindkey '^R' history-incremental-search-backward

# hub (Github git extension)
if [[ `which hub` ]]; then
  eval "$(hub alias -s)"
  fpath=(~/.zsh/completions $fpath)
  autoload -U compinit && compinit
fi


if [[ `which gh` ]]; then
  eval "$(gh completion -s zsh)"
fi

# MySQL 5.6
# export PATH="/usr/local/opt/mysql@5.6/bin:$PATH"

# python
# export PATH="/usr/local/opt/python/libexec/bin:$PATH"

# rbenv
if [ -d $HOME/.rbenv ]; then
  eval "$(rbenv init -)"
fi

# pyenv
if [ -n "$TMUX" ]; then
  if command -v pyenv 1>/dev/null 2>&1; then
    export PYENV_ROOT="$HOME/.pyenv"
    export PATH="$PYENV_ROOT/bin:$PATH"
    eval "$(pyenv init -)"
  fi
fi

# kubectl
if [ $commands[kubectl] ]; then
  source <(kubectl completion zsh)
fi

# jenv
export PATH="$HOME/.jenv/bin:$PATH"
eval "$(jenv init -)"

# ssh-agent
eval $(ssh-agent) > /dev/null # thanks, I hate it.
ssh-add ~/.ssh/jcto-platform.pem &> /dev/null
ssh-add ~/.ssh/uken-platform.pem &> /dev/null

SCRIPT_DIR=$0:A:h

. $SCRIPT_DIR/../shell/aliases
. $SCRIPT_DIR/../shell/environment
. $SCRIPT_DIR/../shell/hacks

